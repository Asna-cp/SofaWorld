<%-include('../user/layout/userheader.ejs') -%>

<!--================Home Banner Area =================-->
<!-- breadcrumb start-->
<section class="breadcrumb breadcrumb_bg">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="breadcrumb_iner">
          <div class="breadcrumb_iner_item">
            <h2>All Products</h2>
            <p>Home <span>-</span> Shop products</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- breadcrumb start-->

<!--================Category Product Area =================-->
<section class="cat_product_area section_padding">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="row align-items-center latest_product_inner">
          <% products.forEach(function(product){ %> <%
          if(product.update==true){%>

          <div class="col-lg-4 col-sm-6">
            <div class="single_product_item">
              <div class="row d-flex" style="justify-content: right">
                <% let inwishlist=list.some(item=> item._id.toString() ===
                product._id.toString() ) %> <% if( !inwishlist){ %>
                <a
                  href="/addtowishlist/<%= product?._id %>"
                  style="margin-right: 5rem; margin-top: 2rem; color: red"
                  ><i class="bi bi-heart"></i
                ></a>
                <% } else { %>
                <form
                  action="/removewishlistproduct/<%= product?._id %>"
                  method="post"
                >
                  <button
                    type="submit"
                    class="btn"
                    style="margin-right: 5rem; margin-top: 2rem; color: red"
                  >
                    <i class="bi bi-heart-fill"></i>
                  </button>
                </form>
                <% } %>
              </div>
              <img
                src="/images/<%= product?.image %>"
                style="width: 200px; height: 200px"
                alt=""
              />
              <div class="single_product_text">
                <h4><%= product?.productName %></h4>
                <h3><%= product?.price %></h3>
                <a href="/addtocart/<%= product?._id %>" class="add_cart"
                  >+ add to cart</a
                >
                <a href="/productdetails/<%= product?._id %>" class="add_cart">
                  +Product Details</a
                >
              </div>
            </div>
          </div>
          <%}%> <% }) %>

          <div class="col-lg-12">
            <div class="pageination">
              <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                  <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                      <i class="ti-angle-double-left"></i>
                    </a>
                  </li>
                  <li class="page-item"><a class="page-link" href="#">1</a></li>
                  <li class="page-item"><a class="page-link" href="#">2</a></li>
                  <li class="page-item"><a class="page-link" href="#">3</a></li>
                  <li class="page-item"><a class="page-link" href="#">4</a></li>
                  <li class="page-item"><a class="page-link" href="#">5</a></li>
                  <li class="page-item"><a class="page-link" href="#">6</a></li>
                  <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                      <i class="ti-angle-double-right"></i>
                    </a>
                  </li>
                </ul>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!--================End Category Product Area =================-->

<!-- product_list part end-->

<%-include('../user/layout/userfooter.ejs') -%>
