<%-include('../user/layout/userheader.ejs') -%>
  <section class="breadcrumb breadcrumb_bg">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="breadcrumb_iner">
            <div class="breadcrumb_iner_item">
              <h2>Cart Products</h2>
              <p>Home <span>-</span>Cart Products</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!--================Cart Area =================-->
  <section class="cart_area padding_top">
    <div class="container">
      <div class="cart_inner">
        <% if(cart.length == 0){ %>
					
          <div class="col-12 text-center">
            <img src="https://ibellstore.com/images/no-item-found-here.png" alt="no order" style="width: 400px; height:300px ;">
          </div>
          <% }else{ %> 
        <div class="table-responsive">
          
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Product</th>
                  <th scope="col">Price</th>
                  <th scope="col">Quantity</th>
                  <th scope="col">Total</th>
                  <th scope="col">Update</th>
              </tr>
            </thead>
            <tbody>
              <% cart.forEach(function(product){ %>
              <tr>
                <td>
                  <div class="media">
                    <div class="d-flex">
                      <img src="/images/<%= product?.productId?.image %>" alt="" />
                    </div>
                    <div class="media-body">
                      <p><%= product.productId?.productName %></p>
                    </div>
                  </div>
                </td>
                <td>
                  <h5>₹<%= product.productId?.price %></h5>
                </td>
                <td>
                  <div class="product_count">
                    <span class="input-number-decrement"> 
                      <a class="qty-down" href="/button-decrement/<%= product.productId?._id %>">
                      <i class="ti-angle-down"></i></a>
                    </span>
                    <input class="input-number" id="itemQty-<%= product.productId?.id %>" type="text" value="<%= product.quantity %>" min="0" max="10">
                    <span class="input-number-increment">
                      <a class="qty-up" href="/button-increment/<%=product.productId?._id %>">
                       <i class="ti-angle-up"></i></a>
                      </span>
                  </div>
                </td>
                <td>
                  <h5>₹<%= product.total %></h5>
                </td>
                <td>
                  <form
                    action="/removecartproduct/<%= product.productId?._id %>/<%= product.productId?.price %>/<%= product.quantity %> "
                    method="post">

                    <button type="submit" class="btn btn-outline-danger ">Remove</button>
                  </form>
                </td>
              </tr>
              <% }) %>
              <tr>
                <td></td>
                <td></td>
                <td></td>
                <td>
                  <h5>Subtotal</h5>
                </td>
                <td>
                  <h5>₹<%= cartTotal %></h5>
                </td>
              </tr>
            </tbody>
          </table>
          <div class="checkout_btn_inner float-right">
            <a class="btn_1 checkout_btn_1" href="/checkout">Proceed to checkout</a>

          </div>
        </div>
        <%}%>
      </div>
  </section>
  <!--================End Cart Area =================-->
  <%-include('../user/layout/userfooter.ejs') -%>











































