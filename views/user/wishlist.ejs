                  <span class="input-number-increment"> <i class="ti-angle-up"></i></span>
                </div>
              </td> -->
              <!-- <td>
                <h5>   <%= product?.price %></h5>
              </td> -->

           
              
              <td>
                <!-- <button type="submit" class="btn btn-primary"   style="width: 100px;">Remove</button>
                <span>&#9825;</span>
                 -->
                 <!-- <i class="bi bi-heart-fill"></i> -->
                 <form action="/removewishlistproduct/<%= product?._id %>" method="post">
                  
                   <button type="submit"  class="btn btn-outline-dark" >Remove</button>
                </form>
                  
              </td>
            </tr>
              <% }) %>
          </tbody>
        </table>
        <div class="checkout_btn_inner float-right">
          <a class="btn_1" href="productpage">Continue Shopping</a>
          <a class="btn_1 checkout_btn_1" href="#">Add to cart</a>
        </div>
      </div>
    </div>
</section>
