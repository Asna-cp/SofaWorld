              <td>
                <div class="media">
                  <div class="d-flex">
                    <img src="/images/<%= product?.image %>" style="width: 200px; height: 200px;" alt="" />
                  </div>
                  <div class="media-body">
                    <p> <%= product?.productName %></p>
                  </div>
                </div>
              </td>
              <td>
                <h5> <%= product?.price %></h5>
              </td>
            

