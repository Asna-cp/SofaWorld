


<%-include('../user/layout/userheader.ejs') -%>

<!--================Home Banner Area =================-->
<!-- breadcrumb start-->
<section class="breadcrumb breadcrumb_bg">
  <div class="container">
    <div class="row justify-content-center">
      
      <div class="col-lg-8">
        <div class="breadcrumb_iner">
          <div class="breadcrumb_iner_item">
            <h2>Wishlist</h2>
            <p>Home <span>-</span>Wishlist Products</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- breadcrumb start-->

<!--================Cart Area =================-->
<section class="cart_area padding_top">
  <div class="container">
    <div class="cart_inner">

      <% if (list.length == 0) { %> 
        <div class="col-12 text-center">
          <img src="https://ibellstore.com/images/no-item-found-here.png" alt="no order" style="width: 400px; height:300px ;">
        </div>
      <% } else { %> 
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Product</th>
              
              <th scope="col">Price</th>
             
              <th scope="col">Update</th>
             
            </tr>
          </thead>
          <tbody>
            <% list.forEach(function(product){ %>
            <tr>
              <td>
                <div class="media">
                  <div class="d-flex">
                    <img src="/images/<%= product?.image %>" class="d-md-block d-none" style="width: 200px;" alt="" />
                    <img src="/images/<%= product?.image %>" class="d-md-none d-block" style="width: 100%;" alt="" />
                  </div>
                  <div class="media-body">
                    <p><%= product?.productName %></p>
                  </div>
                </div>
              </td>
              <td>
                <h5>â‚¹<%= product?.price %></h5>
              </td>


              <td>
             
                <form action="/removewishlistproduct/<%= product?._id %>" method="post">
                 
                  <button type="submit"  class="btn btn-outline-danger " style="width: 7rem;">Remove</button>
               </form>
               <br>
               <form action="/wishlistaddcart/<%= product?._id %>" method="post">
                 
                 <button type="submit"  class="btn btn-outline-success" >Add to cart</button>
              </form>
                 
             </td>

           
             
            </tr>
            <% }) %>
        
          
            
          </tbody>
        </table>
      
      </div>
    </div>
    <% } %>
</section>
<!--================End Cart Area =================-->

<%-include('../user/layout/userfooter.ejs') -%>








