<!DOCTYPE html>
<html lang="zxx">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>SofaWorld</title>
    <link rel="icon" href="img/favicon.png" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/stylesheets/user/home/bootstrap.min.css" />
    <!-- animate CSS -->
    <link rel="stylesheet" href="/stylesheets/user/home/animate.css" />
    <!-- owl carousel CSS -->
    <link rel="stylesheet" href="/stylesheets/user/home/owl.carousel.min.css" />
    <!-- font awesome CSS -->
    <link rel="stylesheet" href="/stylesheets/user/home/all.css" />
    <!-- flaticon CSS -->
    <link rel="stylesheet" href="/stylesheets/user/home/flaticon.css" />
    <link rel="stylesheet" href="/stylesheets/user/home/themify-icons.css" />
    <!-- font awesome CSS -->
    <link rel="stylesheet" href="/stylesheets/user/home/magnific-popup.css" />
    <!-- swiper CSS -->
    <link rel="stylesheet" href="/stylesheets/user/home/slick.css" />
    <!-- style CSS -->
    <link rel="stylesheet" href="/stylesheets/user/home/style.css" />
