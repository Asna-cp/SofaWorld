<%-include('../user/layout/userheader.ejs') -%>
<section class="breadcrumb breadcrumb_bg">
 <div class="container">
   <div class="row justify-content-center">
     <div class="col-lg-8">
       <div class="breadcrumb_iner">
         <div class="breadcrumb_iner_item">
           <h2>View Orders</h2>
           <p>Home <span>-</span>All Orders</p>
         </div>
       </div>
     </div>
   </div>
 </div>
</section>
<!--================Cart Area =================-->
<section class="cart_area padding_top">
  <div class="container">
    <div class="cart_inner">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Product</th>
             <th scope="col">Price</th>
             <th scope="col" class="text-center">Quantity</th>
             <th scope="col">Total</th>
             <th scope="col">Status</th>
             <th scope="col">Expected Date</th>
             <th scope="col">Update</th>
             <th scope="col">Invoice</th>
            </tr>
          </thead>
          <tbody>
            <% orders.forEach((order) =>  { %>
              <% for(prod of order.productIds ) { %>
            <tr>
              <td>
                <div class="media">
                  <div class="d-flex">
                    <img src="/images/<%= prod.productId.image %>" class="d-md-block d-none" style="width: 200px;" alt="" />
                    <img src="/images/<%= prod.productId.image %>" class="d-md-none d-block" style="width: 100%;" alt="" />
                  </div>
                  <div class="media-body">
                    <p><%= prod.productId?.productName %></p>
                  </div>
                </div>
              </td>
              <td>
                <h5><%= prod.productId?.price %></h5>
              </td>
              <td class="text-center">
                <h5><%= prod.quantity %></h5>
              </td>
             <td>
                <h5>â‚¹<%= prod.total %></h5>
               
               </td>
               <td>
                <h5><%= prod.status %></h5>
              </td>
              <td class="text-center">
                <h5><%=  moment(expected_delivery_date).format('llll') %></h5>
              </td>
              <td>   
                <form action="/cancelOrder/<%= prod.productId?._id %>/<%= order._id %>" method="post">
               <button type="submit"  class="btn btn-outline-dark">Cancel</button>
            </form>
           </td>
           <td> 
            <a class="btn btn-outline-dark" href="/invoice">Invoice</a> 
     </td>
        </tr>
          <% }}) %>
        </tbody>
        </table>
      </div>
    </div>
</section>
<!--================End Cart Area =================-->
<%-include('../user/layout/userfooter.ejs') -%>










































