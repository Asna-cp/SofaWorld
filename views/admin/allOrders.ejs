    <head>
      <title>Asna</title>
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    </head>

    <body>

      <div class="card mt-2 mx-4 ">
        <h5 class="card-header">All Orders</h5>

        <div class="table-responsive text-nowrap">
          <table class="table table-dark table-striped">
            <thead>
              <tr>
                <th scope="col"></th>
                <th scope="col">Name</th>
                <th scope="col">Quantity</th>
                <th scope="col"class="text-center">Expected Date</th>
                <th scope="col">Price</th>
                <th scope="col">Payment Method</th>
                <th scope="col">Payment</th>
                <th scope="col">Image</th>
                <th scope="col">status</th>

              </tr>
            </thead>
            <tbody>
              <% orders.forEach((order) => { %> 
              <% for(prod of order.productIds ) { %>
              
                  <tr>
                    <th scope="row">
                   
                    </th>
                    <td>
                      <%= prod.productId?.productName %>
                    </td>
                   
                  
                    <td class="text-center">
                      <%= prod.productId?.quantity %>
                    </td>
                    <td>
                      <p><%= moment(expected_delivery_date).format('llll') %></p>
                    </td>
                    <td>
                      <%= prod.productId?.price %>
                    </td>
                    <td class="text-center">
                      <%= order?.paymentMethod %>
                    </td>
                    <td>
                      <%= order?.payment %>
                    </td>
                    <td><img src="/images/<%= prod.productId?.image %>" alt="" style="height: 50px; width: 60px;"></td>

               
                    
                        <td>
                          <% if (prod.status=='Order Confirmed' ){ %>
                            <button type="button" onclick="changeStatus('<%= prod.status %>','<%= order._id %>','<%=prod.productId._id %>')"
                              class="btn btn-success"style="width: 145px;">Order Confirmed</button>

                              <% }else if(prod.status=='Packed') { %>
                              <button type="button" onclick="changeStatus('<%= prod.status %>','<%= order._id %>','<%= prod.productId._id %>')"
                                class="btn btn-primary"style="width: 145px;">Packed</button>

                                <% }else if(prod.status=='Shipping') { %>
                                  <button type="button" onclick="changeStatus('<%= prod.status %>','<%= order._id %>','<%= prod.productId._id %>')"
                                    class="btn btn-secondary"style="width: 145px;">Shipping</button>

                                    <% }else if(prod.status=='Delivered') { %>
                                      <button type="button" onclick="changeStatus('<%= prod.status %>','<%= order._id %>','<%= prod.productId._id %>')"
                                        class="btn btn-warning"style="width: 145px;">Delivered</button>
                              

                                         <% }else{ %> <button
                                          type="button"
                                          class="btn btn-danger"style="width: 145px;"
                                        > Canceled
                                      </button>
                                      <% } %>
                      
                                    </td>
                                  </tr>
                          <% }}) %>

                        </tbody>
                   </table>
                     </div>
                </div>
             <script>
        function changeStatus(status, orderId, prodId) {
          
        
          axios.post("/admin/allOrders", { status, orderId, prodId }).then(() => {
            

            window.location.reload();
          });
        }
      </script>
      <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

 

